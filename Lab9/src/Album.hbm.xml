<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entities.Album" table="albums" schema="MusicAlbums">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="artistId">
            <column name="artist_id" sql-type="int(11)"/>
        </property>
        <property name="releaseYear">
            <column name="release_year" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="genreId">
            <column name="genre_id" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>